<!DOCTYPE html>
<html>
<head>
  <title>Nora Blomaard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="content">
    <div class="background">
    </div>
  </div>

  <div id="main">
  <%= render "layouts/nav" %>
  <%= yield %>
  </div>

</body>

<footer class="footer">
  <div class="container">
    <p class="text-muted">
      <% if current_admin %>
      <%= link_to "New post", new_post_path, :id => "new_link" %>
      <%= link_to "Admin log out", destroy_admin_session_path, method: :delete, :id => "admin_logout_link" %>
      <% else %>
      <%= link_to "Admin log In", new_admin_session_path, :id => "admin_link" %>
      <% end %>
    </p>
  </div>
</footer>
</html>
