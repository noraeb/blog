<div class="post">
  <h2><%= post.title %></h2>
  <p><%= post.content %></p>
  <% if can? :create, Like %>
  <noscript>
    <%= render "/likes/form", post: post %>
  </noscript>
  <span class="counter" id="post-counter-<%= post.id %>">
    <%= post.likes.count %>
  </span>
  <%= link_to "Like", post_likes_path(post), class: "like-button", data: { post_id: post.id } %>
  <% end %>
</div>
