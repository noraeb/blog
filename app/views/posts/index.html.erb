<h1>Nora's Blog</h1>

<p>Welcome to my blog</p>

<h2>Posts</h2>

<%= render @posts %>

<% if current_admin %>
<div class="new_post">
  <h3>New post</h3>
  <%= form_for(@post) do |f| %>
  <div class="input required">
    <%= f.label :title %>
    <%= f.text_area :title %>
  </div>
  <div class="input required">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<% end %>

<% if current_admin %>
<%= link_to "Admin log out", destroy_admin_session_path, method: :delete %>
<% else %>
<%= link_to "Admin log In", new_admin_session_path %>
<% end %>
